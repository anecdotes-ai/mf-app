{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": ["es2018", "es2020", "dom"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@mf-app/shared/assets": ["libs/shared/assets/src/index.ts"],
      "core": ["libs/shared/core/src/index.ts", "libs/shared/core/src/*"],
      "core/modules/*": ["libs/shared/modules/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
